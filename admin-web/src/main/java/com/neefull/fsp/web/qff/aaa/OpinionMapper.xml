<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neefull.fsp.web.qff.aaa.OpinionMapper">


    <select id="getOpinion" resultType="com.neefull.fsp.web.qff.entity.Opinion">
        select * from qff_opinion where parent_id = (select id from qff_opinion where name = #{name})
    </select>
    <select id="queryAll" resultType="com.neefull.fsp.web.qff.entity.Opinion">
        select * from qff_opinion where parent_id = 0
        <if test="query.stage!=null and query.stage!=''">
            and  name  like  concat('%',#{query.stage},'%')
        </if>
    </select>


</mapper>