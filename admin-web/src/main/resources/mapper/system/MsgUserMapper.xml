<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neefull.fsp.web.system.mapper.MsgUserMapper">

    <insert id="saveByMsgUser" parameterType="com.neefull.fsp.web.system.entity.MsgUser">
        insert into flp_slave.t_msg_user(msg_id,user_id,read_state,delete_state,create_time,modify_time)
        VALUES(#{msgId,jdbcType=INTEGER},#{userId,jdbcType=INTEGER},#{readState,jdbcType=INTEGER},
        #{deleteState,jdbcType=INTEGER},NOW(),NOW())
    </insert>

    <insert id="saveByMsgIdAndUserList">
        insert into flp_slave.t_msg_user(msg_id,user_id,read_state,delete_state,create_time,modify_time) VALUES
        <foreach collection="list" index="index" separator="," item="item">
            (#{msgId,jdbcType=INTEGER},#{item.userId,jdbcType=INTEGER},'0','0',NOW(),NOW())
        </foreach>
    </insert>
</mapper>
